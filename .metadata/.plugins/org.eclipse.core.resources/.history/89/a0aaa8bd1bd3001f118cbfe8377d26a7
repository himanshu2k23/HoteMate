	<script>
		// Calculate number of nights and total amount
		function updatePriceCalculations() {
			const checkIn = new Date(document
					.querySelector('input[name="checkIn"]').value);
			const checkOut = new Date(document
					.querySelector('input[name="checkOut"]').value);

			if (checkIn && checkOut) {
				const nights = Math.ceil((checkOut - checkIn)
						/ (1000 * 60 * 60 * 24));
				const basePrice = 5000 * nights;
				const taxes = basePrice * 0.18;
				const total = basePrice + taxes;

				document.getElementById('numberOfNights').textContent = nights;
				document.getElementById('taxesAmount').textContent = `₹${taxes.toFixed(2)}`;
				document.getElementById('totalAmount').textContent = `₹${total.toFixed(2)}`;
			}
		}

		// Add event listeners for date changes
		document.querySelector('input[name="checkIn"]').addEventListener(
				'change', updatePriceCalculations);
		document.querySelector('input[name="checkOut"]').addEventListener(
				'change', updatePriceCalculations);

		// Previous script content remains the same
	</script>
