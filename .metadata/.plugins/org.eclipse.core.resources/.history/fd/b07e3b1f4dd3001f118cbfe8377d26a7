	<script>
	// Calculate number of nights and total amount
    function updatePriceCalculations() {
        const checkIn = new Date(document.querySelector('input[name="checkIn"]').value);
        const checkOut = new Date(document.querySelector('input[name="checkOut"]').value);
        
        if (checkIn && checkOut) {
            const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
            const basePrice = 5000 * nights;
            const taxes = basePrice * 0.18;
            const total = basePrice + taxes;

            document.getElementById('numberOfNights').textContent = nights;
            document.getElementById('taxesAmount').textContent = `₹${taxes.toFixed(2)}`;
            document.getElementById('totalAmount').textContent = `₹${total.toFixed(2)}`;
        }
    }

    // Add event listeners for date changes
    document.querySelector('input[name="checkIn"]').addEventListener('change', updatePriceCalculations);
    document.querySelector('input[name="checkOut"]').addEventListener('change', updatePriceCalculations);	
	
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            // Add your payment gateway integration code here
            alert('Redirecting to payment gateway...');
            this.submit();
        });

        // Update booking summary based on selections
        const updateSummary = () => {
            // Add your price calculation logic here
        };

        // Add date validation
        const checkInDate = document.querySelector('input[name="checkIn"]');
        const checkOutDate = document.querySelector('input[name="checkOut"]');

        const today = new Date().toISOString().split('T')[0];
        checkInDate.min = today;

        checkInDate.addEventListener('change', function() {
            checkOutDate.min = this.value;
        });
    </script>
